package com.running.train.status.receiver;

import java.util.List;

import org.springframework.amqp.core.Message;
import org.springframework.amqp.rabbit.annotation.RabbitHandler;
import org.springframework.amqp.rabbit.annotation.RabbitListener;
import org.springframework.stereotype.Service;

import com.status.running.train.model.TrainUpdateStatus;


@Service
@RabbitListener(queues = "trainUpdateQueue")
public class TrainRunningStatusReceiver {

	@RabbitHandler
	public void receiveTrainUpdateStatus(List<TrainUpdateStatus> message) {
		System.out.println("Received Successfully : " +message.get(0).getTrainNumber());
	  }
}
