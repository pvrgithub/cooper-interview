package com.running.train.status.controller;

import org.springframework.amqp.rabbit.annotation.RabbitListener;
import org.springframework.stereotype.Service;

import com.status.running.train.model.TrainUpdateStatus;


@Service
public class TrainRunningStatusReceiver {
	
	@RabbitListener(queues = "${train-running-service.rabbitmq.queueName}")
	public void receiveTrainUpdateStatus(final TrainUpdateStatus message) {
		System.out.println("Received Successfully : " + message);
	}
}
