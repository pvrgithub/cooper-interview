package com.train.service;

import java.util.List;

import org.springframework.stereotype.Service;
import org.springframework.web.bind.annotation.PathVariable;

import com.train.contract.APITrainService;
import com.train.entities.Train;
import com.train.repository.TrainRepository;
/**
 * The Service layer that does all the business processing logic by using the
 * hold of Repository object reference.
 * 
 * @author PVR
 * 
 * @since 20 / 07 / 2020.
 */
@Service
public class StationService implements APITrainService {

	private TrainRepository subjectRepository;

	public StationService(TrainRepository subjectRepository) {
		this.subjectRepository = subjectRepository;
	}

	public Train getStationById(@PathVariable Long id) {
		return subjectRepository.findById(id).get();
	}	
	
	public List<Train> addStation(List<Train> stations) {		
		return subjectRepository.saveAll(stations);
	}
}