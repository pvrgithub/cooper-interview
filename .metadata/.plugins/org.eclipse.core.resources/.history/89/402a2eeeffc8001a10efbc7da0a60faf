package com.status.running.train;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.cloud.client.discovery.EnableDiscoveryClient;
import org.springframework.cloud.netflix.ribbon.RibbonClient;
import org.springframework.cloud.openfeign.EnableFeignClients;
import org.springframework.context.annotation.Bean;
import org.springframework.web.client.RestTemplate;

import springfox.documentation.swagger2.annotations.EnableSwagger2;

@SpringBootApplication
@EnableDiscoveryClient
@RibbonClient(name = "train-enquiry-service")
@EnableFeignClients(value = "com.status.running.train")
@EnableSwagger2
public class TrainEnquiryServiceApplication implements CommandLineRunner {

	@Value("${train-enquiry-service.pages}")
	private int pages;

	public static void main(String[] args) {
		SpringApplication.run(TrainEnquiryServiceApplication.class, args);
	}
	
	@Bean
	public RestTemplate getRestTemplate() {
		return new RestTemplate();
	}

	@Override
	public void run(String... args) throws Exception {
		System.out.println("Pages : " + pages);
	}

}
