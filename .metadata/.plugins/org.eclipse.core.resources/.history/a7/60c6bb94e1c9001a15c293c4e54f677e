package com.train.routing.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.train.routing.model.Route;

@Repository
public interface TrainRoutingRepository extends JpaRepository<Route, Integer> 
{
	@Query("SELECT * FROM ROUTING WHERE ID = ?1")
	public List<String> getStationListByRouteId(int id);
	 
}
