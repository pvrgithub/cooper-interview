package com.train.routing.contract;

import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.train.routing.model.Route;
import com.train.routing.model.Station;

public interface APIRoutingService {

	@GetMapping(value = "/route/{id}/stations")
	public List<Station> getStationListByRouteId(@PathVariable int id);

	@GetMapping(value = "/route/{routeId}")
	public Route getRoute(@PathVariable int routeId);
}
