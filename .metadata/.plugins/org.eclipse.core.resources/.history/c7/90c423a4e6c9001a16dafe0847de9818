package com.train.routing.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.train.routing.model.Route;
import com.train.routing.model.RouteResponse;

@Repository
public interface TrainRoutingRepository extends JpaRepository<Route, Integer> 
{	 
	@Query("SELECT r FROM Route r where r.id = ?1")
	List<RouteResponse> findRouteById(Integer id);	
}
