package com.status.running.train;

import static org.junit.jupiter.api.Assertions.assertAll;

import java.util.List;

import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.autoconfigure.web.servlet.WebMvcTest;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.boot.test.context.SpringBootTest.WebEnvironment;
import org.springframework.util.Assert;

import com.train.routing.controller.TrainRoutingController;
import com.train.routing.entities.Route;

@WebMvcTest(TrainRoutingController.class)
class TrainRoutingServiceApplicationTests {
	
	@Autowired
	private TrainRoutingController trainRoutingController;
	
	@Test
	public void testgetAllTrainRoutes() {
		List<Route> routes = trainRoutingController.getAllTrainRoutes();
		Assert.isTrue(routes.size() > 0, "The routes are not available");
	}
	
}
